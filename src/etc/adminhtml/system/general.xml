<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>General</label>
        <attribute type="expanded">1</attribute>

        <field id="active" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Enable</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
        </field>

        <field id="debug" translate="label" type="select" sortOrder="0" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Debug logging</label>
            <source_model>Magento\Config\Model\Config\Source\Enabledisable</source_model>
        </field>

        <field id="frontend_cart_url" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Frontend Cart URL</label>
            <comment>If you are utilizing a headless frontend, assign the URL to the frontend cart. If not, you can leave this field empty.</comment>
        </field>
    </group>
</include>
